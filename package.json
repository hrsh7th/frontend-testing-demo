{
  "name": "@hrsh7th/frontend-testing-demo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "run-s prepare:*",
    "prepare:playwright": "playwright install --with-deps",
    "dev": "run-p dev:*",
    "dev:app": "next dev --experimental-test-proxy",
    "dev:e2e": "playwright test --config tests/e2e/playwright.config.ts --ui",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "storybook": "storybook dev -p 6006",
    "test": "run-s test-build test:*",
    "test-build": "next build && storybook build",
    "test:smoke": "start-server-and-test 'http-server -p 6006 storybook-static' 6006 'test-storybook'",
    "test:vrt": "start-server-and-test 'http-server -p 6006 storybook-static' 6006 'playwright test --config tests/vrt/playwright.config.ts; echo 1'",
    "test:e2e": "start-server-and-test 'next dev --experimental-test-proxy' 3000 'playwright test --config tests/e2e/playwright.config.ts'"
  },
  "dependencies": {
    "next": "13.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "swr": "^2.2.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.38.1",
    "@storybook/addon-essentials": "^7.4.3",
    "@storybook/addon-interactions": "^7.4.3",
    "@storybook/addon-links": "^7.4.3",
    "@storybook/nextjs": "^7.4.3",
    "@storybook/react": "^7.4.3",
    "@storybook/test-runner": "^0.13.0",
    "@storybook/testing-library": "^0.2.1",
    "@types/node": "20.6.3",
    "@types/react": "18.2.22",
    "@types/react-dom": "18.2.7",
    "eslint": "8.49.0",
    "eslint-config-next": "13.5.2",
    "eslint-plugin-storybook": "^0.6.14",
    "filenamify": "^6.0.0",
    "http-server": "^14.1.1",
    "msw": "^1.3.1",
    "msw-snapshot": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^2.0.1",
    "storybook": "^7.4.3",
    "typescript": "^5.2.2"
  }
}
